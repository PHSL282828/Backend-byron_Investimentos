generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String

  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())
  investments Investment[]


  @@map("users")
}

model Investment{
  id String @id @default(uuid())
  name String
  investedValue Float
  quantity Int
  dateInvested DateTime? @default(now())
  ticker String
  user_id String
  user User @relation(fields:[user_id], references:[id])

  

  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  @@map("investments")

}

model TokenRevogado {//vamos precisar pra facilitar a implementação da blacklist de tokens
  id        String   @id @default(cuid())
  jti       String   @unique
  exp       DateTime
  createdAt DateTime @default(now())
}

